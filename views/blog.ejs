<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') -%>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav') -%>
        <div class="container">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%=blog.coverImageURL %>" width="600px" />
            <pre class="mt-3"><%= blog.body %></pre>

            <div class="container mt-4">
                <img src="<%=blog.createdBy.profileImageURL %>" width="50px">
                <%= blog.createdBy.fullName %>
            </div>
            <!-- if current user is loggedIn then only he can comment -->
            <h3>Comments (<%= comments.length%>)</h3>
            <%if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post" class="mt-3">
                    <div class="form-group mb-3">
                        <input type="text" class="form-control" name="content" placeholder="enter your comment">
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary mb-3">Submit</button>
                </form>
                <% } %>
                    <div class="mt-3">
                        <% comments.forEach(comment=> { %>
                            <img src="<%=comment.createdBy.profileImageURL %>" width="50px">
                            <%= comment.createdBy.fullName %>
                                <pre><%= comment.content %></pre>
                                <% }); %>
                    </div>
        </div>
        <%- include('./partials/scripts') -%>
</body>

</html>